    <!--<bean class="com.dao.daoImpl.LikeImpl"/>-->
    <!--<bean class="com.dao.daoImpl.MoneyImpl"/>-->
    <!--<bean class="com.dao.daoImpl.RoleImpl"/>-->

    <!--<tx:annotation-driven transaction-manager="txManager"/>-->
